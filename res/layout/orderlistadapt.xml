<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:padding="4dp"
    android:orientation="horizontal"
    android:background="#ffffffff"
    >
    <TextView 
	    android:id="@+id/order_type"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="18sp"
	    android:textColor="#ff000000"
	    android:layout_marginLeft="5dp"
	    android:singleLine="true"
	    android:gravity="center_vertical"
	    />
    <Button 
        android:id="@+id/order_icon"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:text="@string/order_icon"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:gravity="center_horizontal|center_vertical"
        android:layout_toRightOf="@id/order_type"
        android:background="@drawable/buttonsmall"
        android:layout_marginTop="2dip"
        android:scaleType="centerCrop"/>
	<TextView 
	    android:id="@+id/order_datetime"
	    android:layout_width="220dip"
	    android:layout_height="wrap_content"
	    android:textSize="16sp"
	    android:textColor="#ff000000"
	    android:layout_below="@id/order_type"
	    android:singleLine="true"
	    android:layout_marginLeft="5dp"
	    android:gravity="center_vertical"
	    />
	<TextView 
	    android:id="@+id/order_address"
	    android:layout_width="220dip"
	    android:layout_height="wrap_content"
		android:layout_below="@id/order_datetime"
		android:textColor="#ff000000"
		android:singleLine="true"
		android:layout_marginLeft="5dp" 
		android:gravity="center_vertical"  
	    />
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#ffffffff"
        android:orientation="vertical"
        android:gravity="center_vertical"
	    android:layout_alignParentRight="true"
	    android:padding="4dp"
        >
        <TextView 
	        android:id="@+id/order_status"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
		    android:textColor="#ff20bef9"
		    android:textSize="18sp"
		    android:singleLine="true"
		    android:gravity="center_horizontal|center_vertical"
		    android:layout_marginTop="5dp"    
	    />
        <Button 
            android:id="@+id/cancel"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="@string/order_cancel"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_below="@id/order_status"
            android:background="@drawable/buttonlarge"
            android:scaleType="centerCrop"/>

    </LinearLayout>
</RelativeLayout>
